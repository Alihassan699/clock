        link(rel="stylesheet", href="assets/css/style.css")
    body.bg-dark.vh-100.text-white.d-flex.align-items-start.justify-content-center
        #preLoader_Wrapper
            #preLoader
            span.fs-3.mt-4 loading .. !ðŸ¤—
        #particles-js
        .container-fluid 
            .container
                .row.mt-5
                    h1.pt-5.text-center#digitalClock_heading welcome to clock.js
                .row
                    .col-12.col-sm-8.offset-sm-2.col-md-6.offset-md-3.d-flex.justify-content-center.align-items-center#analogClock_wrapper
                        section.text-center.rounded-circle.position-relative.d-flex.justify-content-center.align-items-center#analog_clock
